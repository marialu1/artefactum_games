---
import { getLangFromUrl, t } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const year = new Date().getFullYear();
---

<footer class="border-t border-bg-elevated mt-auto">
  <div class="max-w-6xl mx-auto px-4 py-8">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4 text-sm text-text-muted">
      <!-- Copyright -->
      <p>
        &copy; {year} Artefactum Games. {t(lang, 'footer.rights')}.
      </p>

      <!-- Easter egg footer text -->
      <p class="text-center group cursor-default">
        <span class="group-hover:hidden">{t(lang, 'footer.made')}</span>
        <span class="hidden group-hover:inline text-accent-pink">
          built at 3am, no regrets
        </span>
      </p>

      <!-- Social / Links -->
      <div class="flex items-center gap-4">
        <a
          href="https://dominatedbycline.github.io"
          target="_blank"
          rel="noopener"
          class="hover:text-accent-pink transition-colors"
          title="Dev blog"
        >
          blog
        </a>
        <a
          href="mailto:hello@artefactum.games"
          class="hover:text-text-primary transition-colors"
        >
          email
        </a>
      </div>
    </div>
  </div>
</footer>
