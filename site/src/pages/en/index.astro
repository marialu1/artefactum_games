<script>
  // Claw scratch effect on scroll
  const scratchImg = document.getElementById('scratch-img');
  const scratchImg2 = document.getElementById('scratch-img-2');

  function updateScratches() {
    const scrollY = window.scrollY;
    const maxScroll = document.documentElement.scrollHeight - window.innerHeight;

    // Start showing scratches immediately, complete at end of page
    let revealPercent = 0;
    if (scrollY > 0) {
      revealPercent = Math.min(100, 5 + (scrollY / maxScroll) * 95);
    }
    const clipValue = 100 - revealPercent;

    if (scratchImg) {
      scratchImg.style.clipPath = `inset(${clipValue}% 0 0 0)`;
    }
    if (scratchImg2) {
      scratchImg2.style.clipPath = `inset(${clipValue}% 0 0 0)`;
    }
  }

  window.addEventListener('scroll', updateScratches);
  updateScratches();
</script>
